@charset 'utf-8';
@import 'global.scss';
.swiper-pagination{
    bottom: 15px !important;
    span{
        width: 12px;
        height: 12px;
    }
}
.content{
    position: relative;
}
.main{
    width: 1100px;
    margin: auto;
    text-align: center;
    margin-bottom: 56px;
    position: relative;
    .informations{
        @include flexbox2(justify,space-between,center,center);
        clear: both;
    }
}
.information{
    width: 540px;
    height: auto;
    padding-bottom:20px;
    border: 1px solid #aaaaaa;
    position: relative;
    margin-top: 50px;
    img{
       position: absolute;
       left: 30px;
       top: -15px; 
       width: 127px;
       height: 46px;
    }
    .more{
        width: 100%;
        height: 40px;
        background-color: #f0f0f0;
        line-height: 40px;
        text-align: right;
        font-size: 16px;
        color: #222222;
        a{
            margin-right: 15px;
            i{
                color: #323232;
                font-size: 14px;
            }
        }
    }
    ul{
        text-align: left;
        li{
            font-size: 16px;
            color: #222222;
            margin-top: 18px;
            padding-left: 30px;
            padding-right: 20px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            i{
                color:#dc3c23;
                margin-right: 5px;
                font-size: 16px;
            }
            a:hover{
                color: #f74e47;
            }
        }
    }
}
.picture-nav{
    //display: flex;
    //justify-content: space-between;
    margin-top: 16px;
    margin-bottom: 40px;
    position: relative;
    width: 1100px;
    height: auto;
    overflow: hidden;
    a{
        width: 340px;
        height: 360px;
        float: left;
        margin-right:40px;
        position: relative;
    }
    img{
        width: 340px;
        height: 360px;
        float: left;
        //margin-right:40px;
    }
    a:nth-of-type(3){
        margin-right:0px;
    }
    img:hover{
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
    }
    .mask{
        position: absolute;
        top:0px;
        left:0px;
        width: 340px;
        height:255px;
        //display: none;
        opacity: 0;
        background: no-repeat center center;
        background-size: 340px 255px;
    }
}
.partner-title{
    width: 4.52rem;
    height: 0.28rem;
    margin-top: 0.29rem;
    margin-bottom: 0.29rem;
}
.partner{
    width: 100%;
}
.lastBannerImg{
    cursor: pointer;
}
.closeBtn{
    position: absolute;
    top:20px;
    right:30px;
    display: block;
    font-style: normal;
    font-size: 25px;
    width: 30px;
    height: 30px;
    border: 1px solid #ababab;
    color: #ababab;
    border-radius: 100%;
    text-align: center;
    line-height: 30px;
    cursor: pointer;
}
:global{
    .ant-modal-mask{
        background-color: rgba(0,0,0,0.8);
    }
    .banner-module{
        .ant-modal{
            top: 50px;
            bottom: 50px;
            left: calc(50% - 3.5rem);
            position: absolute;
            padding-bottom: 0;
        }
        .ant-modal-content{
            height: 100%;
        }
        .ant-modal-header{
            display: none;
        }
        .ant-modal-footer{
            display: none;
        }
        .ant-modal-body{
            padding: 0;
            height: 100%;
            position: relative;
            overflow: auto;
            img{
                width: 100%;
            }
        }
    }
}
.video-tabs{
    position: relative;
    &>div{
        &:nth-of-type(1){
           background-color: #dc3c23;
           width: 8px;
           height: 18px;
           position: absolute;
           border-top-right-radius: 4px;
           border-bottom-right-radius: 4px;
        }
    }
    &>i{
        position: absolute;
        transform: rotate(-15deg);
        color: #e4e4e4;
        //font-weight: bold;
        &:nth-of-type(1){
            left: 108px;
        }
        &:nth-of-type(2){
            left: 212px;
        }
    }
}
